{{!< default}}
<div class="las-lobas">
    <div class="section-header w-full mb-12 relative min-h-24rem s:min-h-42rem md:min-h-48rem">
        <div class="inner min-h-inherit">
            <div class="featured-image-wrap min-h-inherit h-full">
                <div class="featured-image min-h-inherit h-full">
                    <a href="" title="" class="block min-h-inherit"> 
                        <img class="min-h-inherit w-full h-full object-cover" src="{{@site.url}}/assets/images/general/las-lobas-top-section.png" alt=""/>
                    </a>
                </div>
                <div class="overlay w-9/10 absolute 0 bottom-6 s:bottom-12 right-0 md:left-unset md:bottom-12 md:right-0 md:bottom-12 bg-white px-4 pb-4 xs:px-8 xs:pb-8 s:pt-8 md:p-8 md:max-w-1/2">
                    <div class="content-container relative">
                        
                        <div class="col-lg-6 w-full xs:w-2/3 s:w-4/5 md:w-full flex items-center">
                            <div class="w-1/3 md:w-1/5 block">
                                {{> icons/lobaauyando width=82 height=95 classes="w-12 xs:w-16 s:w-20 block"}}
                            </div>
                            <div class="w-2/3 md:w-4/5">
                                <h2 class="title font-karma-bold text-3xl s:text-4xl m:text-5xl text-primary-black md:text-5xl">Las Lobas</h2>
                            </div>
                        </div>
                        <div class="col-lg-6 excert">
                                <div class="excerpt font-karma-light text-xs s:text-lg excerpt-content">
                                    Nos transformamos en un movimiento de narración oral itinerante que busca en cada país reunir un grupo de mujeres narradoras dispuestas a compartir el escenario y contar historias de mujeres por mujeres como protagonistas, promoviendo consecuentemente una sororidad activa y permanente en cada país donde se realiza el Aullido. 
                                </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="posts w-full md:w-4/5 md:m-auto md:my-12">
        <!--2021-->
        <div class="w-full clear-both pb-6 teta:pt-20 md:pb-0">
            <div class="w-full text-left md:text-center pb-6 pt-6 md:pt-0 md:pb-0 md:w-1/5 inline-block float-left">
                <span class="pl-6 md:pl-0 text-4xl s:text-5xl">2021</span>
            </div>
            <div class="w-full md:w-4/5 inline-block post-list-2021">
                <div class="">
                    <div class="owl-carousel owl-theme owl-carrousel-2021">
                        {{> las-lobas/post-per-year filter="tag:post+tag:hash-2021"}}
                    </div>
                </div>
            </div>
            <div class="border-b-1 w-9/12 mb-12 m-auto">
                <hr>
            </div>
        </div>
        <!--2020-->
        <div class="w-full clear-both pb-6 teta:pt-20  md:pb-0">
            <div class="w-full text-left md:text-center pb-6 md:pb-0 pt-6 md:pt-0 md:w-1/5 inline-block float-left">
                <span class="pl-6 md:pl-0 text-4xl s:text-5xl">2020</span>
            </div>

            



            <div class="w-full md:w-4/5 inline-block post-list-2020">
                <div class="">
                    <div class="owl-carousel owl-theme owl-carrousel-2020">
                        {{> las-lobas/post-per-year filter="tag:post+tag:hash-2020"}}
                    </div>
                </div>
            </div>
            <div class="border-b-1 w-9/12 mb-12 m-auto">
                <hr>
            </div>
        </div>
        <!--2019-->
        <div class="w-full clear-both pb-6 teta:pt-20  md:pb-0">
            <div class="w-full text-left md:text-center pb-6 md:pb-0 md:w-1/5 inline-block float-left">
                <span class="pl-6 md:pl-0 text-4xl s:text-5xl">2019</span>
            </div>
            <div class="w-full md:w-4/5 inline-block post-list-2019">
                <div class="">
                    <div class="owl-carousel owl-theme owl-carrousel-2019">
                        {{> las-lobas/post-per-year filter="tag:post+tag:hash-2019"}}
                    </div>
                </div>
            </div>
             <div class="border-b-1 w-9/12 mb-12 m-auto">
                <hr>
            </div>
        </div>
        <div class="swiper mySwiper">
            <div style="display: flex;" class="swiper-wrapper">
                {{#get "posts" limit="all"  filter="{{tags}}"}}
                    {{#foreach posts visibility="all"}}
                        <div class="swiper-slide">
                            <div class="w-full col-lg-8 min-h-20rem min-h-24rem md:min-h-24rem large-post post-wrap {{post_class}} {{classes}} md:w-9/10 relative float-left md:px-1" post-index="{{@index}}">
                                <div class="featured-image-wrap relative">
                                    <div class="featured-image">
                                        <a href="{{url}}" title="{{{title}}}">
                                            <img class="w-full min-h-14rem max-h-56 max-h-2/3 h-full object-cover" srcset="{{img_url feature_image size="m"}} 600w,
                                                    {{img_url feature_image size="l"}} 1000w"
                                            sizes="(min-width: 768px) and (max-width: 991px) 1000px, 600px"
                                            src="{{img_url feature_image size="m"}}"
                                            alt="{{title}}"
                                            />
                                        </a>
                                    </div>
                                    <div class="overlay absolute w-4/5 p-8 min-w-7/10 min-h-3/5 right-0 top-5/7 bg-white">
                                        <a class="link" href="{{url}}"></a>
                                        <div class="content-container">
                                            <time class="date text-xs font-karma-bold text-primary-gray" datetime="{{date format="YYYY-MM-DD"}}" title="{{date format="DD MMMM, YYYY"}}">{{date format="MMMM DD, YYYY"}}</time>
                                            <div class="col-lg-6 tag-title">
                                                    <h2 class="title font-karma-bold text-sm xs:text-base l:text-xl text-primary-black s:text-base">{{title}}</h2>
                                            </div>
                                            <div class="col-lg-6 excert">
                                                <div class="excerpt excerpt-content">
                                                    <span class="font-karma-light text-xs xs:text-sm l:text-lg md:text-base">{{excerpt words="10"}}</span>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    {{/foreach}}
                {{/get}}
            </div>
            <div class="swiper-button-next">next</div>
            <div class="swiper-button-prev">prev</div>
        </div>

        
    </div>
</div>
